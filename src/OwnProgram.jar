import java.util.Scanner;
public class OwnProgram {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = 0;
		while (n != 1) {
			// Enter 2 numbers to make calculations with them.
			System.out.println("Enter the first number");
			int num1 = sc.nextInt();
			System.out.println("Enter the second number");
			int num2 = sc.nextInt();
			// It opens the menu to know what calculation are linked with each number.
			System.out.println("Enter the number 1 to make the sum of these two numbers");
			System.out.println("Enter the number 2 to make the subtract of these two numbers");
			System.out.println("Enter the number 3 to make the multiplication of these two numbers");
			System.out.println("Enter the number 4 to make the division of these two numbers");
			System.out.println("Enter the number 5 to know the double number of each number");
			System.out.println("Enter the number 6 to know the half number of each number");
			System.out.println("Enter the number 7 to know the square of each number");
			System.out.println("Enter the number 8 to know the logarithm of each number");
			int z = sc.nextInt();
			switch(z) {
				case 1:
					//The sum of both numbers
					int sum = num1 + num2;
					System.out.println("You choosed the number 1, the program will make the sum of the numbers you entered.");
					System.out.println("The result is " + sum);
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation = sc.nextInt();
					if (calculation < 1) {	
						n = 1;
					}
					
					break;
				case 2:
					// The subtract of both numbers
					int sub = num1 - num2;
					System.out.println("You choosed the number 2, the program will make the subtract of the numbers you entered.");
					System.out.println("The result is: " + sub);
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation2 = sc.nextInt();
					if (calculation2 < 1) {	
						n = 1;
					}
					break;
				case 3:
					// The multiplications of both numbers
					int mul = num1 * num2;
					System.out.println("You choosed the number 3, the program will make the multiplication of the numbers you entered.");
					System.out.println("The result is: " + mul);		
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation3 = sc.nextInt();
					if (calculation3 < 1) {	
						n = 1;
					}
					break;
				case 4:
					// The division of both numbers
					int div = num1 / num2;
					System.out.println("You choosed the number 4, the program will make the division of the numbers you entered.");
					System.out.println("The result is: " + div);
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation4 = sc.nextInt();
					if (calculation4 < 1) {	
						n = 1;
					}
					break;
				case 5:
					// The double of each number
					int dou1 = num1 * 2;
					int dou2 = num2 * 2;
					System.out.println("You choosed the number 5, the program will calculate the double of the numbers you entered.");
					System.out.println("The double of the first number is: " + dou1);
					System.out.println("The double of the second number is: " + dou2);
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation5 = sc.nextInt();
					if (calculation5 < 1) {	
						n = 1;
					}
					break;
				case 6:
					// The half of each number
					int half1 = num1 / 2;
					int half2 = num2 / 2;
					System.out.println("You choosed the number 6, the program will calculate the half of the numbers you entered.");
					System.out.println("The half of the first number is: " + half1);
					System.out.println("The half of the second number is: " + half2);
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation6 = sc.nextInt();
					if (calculation6 < 1) {	
						n = 1;
					}
					break;
				case 7:
					// The square of each number.
					int sq1 = num1 * num1;
					int sq2 = num2 * num2;
					System.out.println("You choosed the number 7, the program will calculate the square of the numbers you entered.");
					System.out.println("The square of the first number is: " + sq1);
					System.out.println("The square of the second number is: " + sq2);
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation7 = sc.nextInt();
					if (calculation7 < 1) {	
						n = 1;
					}
					break;
				case 8:
					// The logarithm of each number.
					System.out.println("You choosed the number 8, the program will calculate the logarythm of the numbers you entered.");
					System.out.println("The logarithm in the base 2 of the first number is:" + (Math.log(num1)/Math.log(2)));
					System.out.println("The logarithm in the base 2 of the second number is: " + (Math.log(num2)/Math.log(2)));
					System.out.println("Enter the number 1 if you want to do another calculation, otherwise enter the number 0");
					int calculation8 = sc.nextInt();
					if (calculation8 < 1) {	
						n = 1;
					}
					break;
				default:
					System.out.println("This number is not correct. Enter a valid number, please");
					break;
				
			}
		}

	}

}
